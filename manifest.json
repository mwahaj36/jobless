{
  "manifest_version": 3,
  "name": "jobless",
  "version": "0.2",
  "description": "censorship of j**-related words on LinkedIn.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.linkedin.com/*"],
   "icons": {
    "16": "jobless.png",
    "48": "jobless.png",
    "128": "jobless.png"
   },
  "action": {
    "default_icon": {
      "16": "jobless.png",
      "48": "jobless.png",
      "128": "jobless.png"
    },
    "default_popup": "popup.html",
    "default_title": "Censor Toggle"
  },
  "content_scripts": [
  {
    "matches": ["*://*.linkedin.com/*"],
    "js": ["content.js"],
    "css": ["style.css"], 
    "run_at": "document_idle"
  }
],
    "_comment": "too tired of being unemployed man pls get me a job or internship, this is a call for help"

}
